{
  "name": "yangtse",
  "version": "1.3.0",
  "description": "Yet Another aNGular Two Starter, with Express.js this time",
  "main": "src/server/server.js",
  "scripts": {
    "clean": "rimraf ./buildOutput/*",
      "clean-deep": "npm cache clean && rimraf ./node_modules ./typings ./buildOutput",

    "postinstall": "npm run install-typings",
      "install-typings": "typings install",

    "build": "npm run build-dev",
      "build-dev": "webpack --config ./webpack.config.dev.js --display-error-details --progress --profile --colors",
        "prebuild-dev": "npm run clean",
      "build-watch": "npm run build-dev -- --watch",
      "build-prod": "webpack --config ./webpack.config.prod.js --display-error-details --progress --profile --colors",
        "prebuild-prod": "npm run clean",

    "start": "npm run serve",

    "serve": "npm run serve-dev",
      "serve-dev": "parallelshell \"node src/server/server.js\" \"set DEV_MODE=reload&&webpack-dev-server --config ./webpack.config.dev.js\" ",
      "serve-watch": "parallelshell \"node src/server/server.js\" \"npm run build-watch\" ",
      "serve-prod": "set NODE_ENV=production&& node src/server/server.js",
        "preserve-prod": "npm run build-prod",

    "test": "karma start",
      "test-debug": "set TEST_MODE=debug&&karma start",
      "test-watch": "set TEST_MODE=watch&&karma start"
  },
  "keywords": [
    "angular2",
    "ng2",
    "typescript",
    "webpack",
    "karma",
    "jasmine",
    "node",
    "nodejs",
    "express",
    "expressjs"
  ],
  "author": "BrainCrumbz Team <team@braincrumbz.com> (http://www.braincrumbz.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrainCrumbz/YANGTSE.git"
  },
  "bugs": {
    "url": "https://github.com/BrainCrumbz/YANGTSE/issues"
  },
  "engines": {
    "node": ">= 4.2.1",
    "npm": ">= 3"
  },
  "dependencies": {
    "@angular/common": "2.0.0",
    "@angular/compiler": "2.0.0",
    "@angular/core": "2.0.0",
    "@angular/forms": "2.0.0",
    "@angular/http": "2.0.0",
    "@angular/platform-browser": "2.0.0",
    "@angular/platform-browser-dynamic": "2.0.0",
    "@angular/router": "3.0.0-rc.3",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "^5.0.0-beta.12",
    "zone.js": "^0.6.23",

    "body-parser": "^1.15.0",
    "cookie-parser": "^1.4.1",
    "errorhandler": "^1.4.3",
    "express": "^4.13.4",
    "express-handlebars": "^3.0.0",
    "morgan": "^1.6.1"
  },
  "devDependencies": {
    "angular2-template-loader": "^0.5.0",
    "autoprefixer": "^6.3.6",
    "awesome-typescript-loader": "^1.1.1",
    "copy-webpack-plugin": "^1.1.1",
    "css-loader": "^0.23.1",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jasmine-core": "~2.4.1",
    "json-loader": "^0.5.4",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-mocha-reporter": "^2.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "node-sass": "^3.10.0",
    "parallelshell": "^2.0.0",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss-loader": "^0.13.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "sass-loader": "^4.0.2",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "tslint": "^3.15.1",
    "tslint-loader": "^2.1.5",
    "typescript": "^2.0.2",
    "typings": "^1.3.3",
    "webpack": "2.1.0-beta.22",
    "webpack-bundle-size-analyzer": "^2.0.1",
    "webpack-dev-server": "2.1.0-beta.4"
  }
}
